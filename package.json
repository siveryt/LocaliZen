{
  "name": "localizen",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run copy-html",
    "copy-html": "copyfiles -u 1 src/**/*.html dist",
    "watch": "nodemon --watch src --ext '*' --exec 'npm run build'",
    "serve": "concurrently \"npm run watch\" \"npm run serve:browser-sync\"",
    "serve:browser-sync": "browser-sync start --server dist --files 'dist/**/*'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "concurrently": "^9.0.1",
    "copyfiles": "^2.4.1",
    "iso-639-1": "^3.1.3",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
